<section
  class="py-12 grid grid-cols-1 lg:grid-cols-2 max-w-screen-xl mx-auto w-11/12 px-8"
>
  <div class="w-full flex flex-col mx-auto max-w-screen-xl">
    <h3 class="font-bold text-xl text-azul-600">Nuestras Redes</h3>
    <a
      href="#"
      class="mt-2.5 lg:mt-10 bg-blue-300 hover:bg-blue-400 text-azul-800 font-bold rounded-md max-w-fit py-3 px-6"
      >Facebook</a
    >
    <a
      href="#"
      class="mt-2.5 bg-pink-400 hover:bg-pink-500 font-bold text-white rounded-md max-w-fit py-3 px-6"
      >Instagram</a
    >
    <a
      href="#"
      class="mt-2.5 bg-green-500 hover:bg-green-600 text-white font-bold rounded-md max-w-fit py-3 px-6"
      >WhatsApp</a
    >
  </div>
  <div class="w-full flex flex-col mx-auto max-w-screen-xl lg:mt-0 mt-12">
    <form action="" class="bg-azul-50/50 p-6 flex flex-col rounded-md">
      <h3 class="font-bold text-2xl text-azul-600">Déjanos un mensaje</h3>
      <div class="flex flex-col mt-2">
        <label class="font-bold text-azul-800 text-lg mt-4" for="">Nombre</label
        >
        <input
          class="border-azul-100 bg-azul-50/10 rounded-lg"
          type="text"
          name="nombre"
          id="nombre"
          placeholder="Escribe tu nombre completo"
        />
      </div>
      <div class="flex my-3 gap-6 md:flex-row flex-col">
        <div class="flex flex-col mt-2 w-full">
          <label class="font-bold text-azul-800 text-lg" for="">Correo</label>
          <input
            class="border-azul-100 bg-azul-50/10 rounded-lg"
            type="email"
            name="correo"
            id="correo"
            placeholder="correo@correo.com"
          />
        </div>
        <div class="flex flex-col mt-2 w-full">
          <label class="font-bold text-azul-800 text-lg" for="">Teléfono</label>
          <input
            class="border-azul-100 bg-azul-50/10 rounded-lg"
            type="tel"
            name="telefono"
            id="telefono"
            placeholder="Número de teléfono"
          />
        </div>
      </div>
      <div class="flex flex-col mt-2">
        <label class="font-bold text-azul-800 text-lg" for="">Mensaje</label>
        <textarea
          name="mensaje"
          id="mensaje"
          class="border-azul-100 bg-azul-50/10 rounded-lg"
          placeholder="Escribe tu mensaje"></textarea>
      </div>
      <a
        class="p-3 bg-azul-600 text-white rounded-sm hover:rounded-md hover:bg-azul-700 hover:cursor-pointer text-center uppercase font-bold tracking-widest mt-4 font-montserrat"
        >Enviar</a
      >
    </form>
  </div>
</section>
